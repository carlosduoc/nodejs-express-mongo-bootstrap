<div class="card card-body p-4 rounded-0 bg-dark text-white" >
  <form action="/tasks/add" method="post">

  <h3>Añadir Tarea</h3>

    <div><label for="title">Título</label>
      <input
        type="text"
        name="title"
        placeholder="Escribe el título"
        id="title"
        class="form-control rounded-0 bg-dark text-white"
      /></div>
    <div><label for="description">Descripción</label>
      <textarea
        name="description"
        id=""
        cols="30"
        rows="10"
        placeholder="Escribe una descripción"
        id="description"
         class="form-control rounded-0 bg-dark text-white"
      ></textarea></div>
    <button class="btn btn-primary btn-sm mt-2">Guardar</button>

  </form>
</div>