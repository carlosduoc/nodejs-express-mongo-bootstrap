<div class="container">
  <div class="row">
    <div class="col-md-5 offset-md-3">
      <div class="card card-body bg-dark p-4 text-white rounded-0">
        <h3>Actualiza la Tarea</h3>
        <form action="/edit/{{task._id}}" method="POST">
          <div class="mb-3">
            <label for="title">Título</label>
            <input
              type="text"
              name="title"
              placeholder="Título"
              value="{{task.title}}"
              class="form-control rounded-0 bg-dark text-white"
            />
          </div>
          <label for="description">Descripción</label>
          <div class="md-3">
            <textarea
              name="description"
              id=""
              cols="30"
              rows="3"
              placeholder="Add a Description"
              class="form-control rounded-0 bg-dark text-white"
            >{{task.description}}</textarea>
          </div>
          <button class="btn btn-primary btn-sm mt-2">Update</button>
        </form>
      </div>
    </div>
  </div>
</div>